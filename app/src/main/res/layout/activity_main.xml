<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#343850">

        <TextView
            android:id="@+id/seru_seruan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seru Seruan"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/shortby_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_marginTop="10dp"
            android:text="short by"
            android:layout_below="@id/seru_seruan"
            android:fontFamily="@font/poppinssemibold"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/oldest_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/oldest_icon"
            android:backgroundTint="@android:color/white"
            android:layout_below="@id/shortby_text"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/oldest_icon"
            android:layout_below="@id/shortby_text"
            android:layout_margin="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#262A43"
        android:padding="20dp">

    <ImageButton
        android:id="@+id/burger_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/menu_icon"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Tugas"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/poppinsbold"/>

    <RelativeLayout
        android:id="@+id/cari_data_parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#e0e0e1"
        android:layout_below="@id/text"
        android:elevation="5dp"
        android:background="@drawable/textview_shape"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:theme="@null">


    <androidx.appcompat.widget.SearchView
        android:id="@+id/cari_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        app:queryBackground="@color/transparent"
        android:hint="Cari Data"
        android:inputType="text"
        android:minLines="1"
        android:paddingStart="20dp"
        android:textSize="20sp"
        android:outlineAmbientShadowColor="@color/transparent"
        android:clickable="true"
        app:iconifiedByDefault="false"
        app:searchIcon="@drawable/search_icon" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_below="@id/cari_data_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/add_icon" />

</RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>